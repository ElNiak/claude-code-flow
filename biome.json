{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"style": {
				"useNodejsImportProtocol": "warn"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedFunctionParameters": "warn",
				"noUnusedImports": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "es5"
		}
	},
	"files": {
		"includes": ["src/**/*"]
	}
}
