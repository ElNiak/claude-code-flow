		},
		"sequential": {
			"description": "Agents work in a defined order",
			"suitableFor": ["deployment", "review", "planning"],
			"topologies": ["ring", "hierarchical"]
		},
		"collaborative": {
			"description": "Agents work together on shared tasks",
			"suitableFor": ["research", "documentation", "problem_solving"],
			"topologies": ["mesh", "star"]
		},
		"hierarchical": {
			"description": "Agents work in a command structure",
			"suitableFor": ["large_projects", "coordination", "management"],
			"topologies": ["hierarchical", "star"]
		}
	},
