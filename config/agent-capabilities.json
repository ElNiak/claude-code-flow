	"agentSelectionRules": {
		"byFileType": {
			"*.ts": ["coder", "reviewer", "tester"],
			"*.js": ["coder", "reviewer", "tester"],
			"*.py": ["coder", "analyst", "tester"],
			"*.md": ["documenter", "reviewer"],
			"*.json": ["analyst", "coder"],
			"*.yml": ["deployer", "reviewer"],
			"*.yaml": ["deployer", "reviewer"],
			"Dockerfile": ["deployer", "security"],
			"package.json": ["architect", "coder", "deployer"],
			"*.test.*": ["tester", "reviewer"],
			"*.spec.*": ["tester", "reviewer"]
		},
		"byProjectType": {
			"web_application": ["architect", "coder", "tester", "deployer"],
			"api_service": ["architect", "coder", "tester", "security"],
			"data_analysis": ["researcher", "analyst", "documenter"],
			"infrastructure": ["deployer", "security", "monitor"],
			"documentation": ["documenter", "reviewer", "researcher"]
		},
		"byWorkflowPhase": {
			"planning": ["architect", "coordinator"],
			"implementation": ["coder", "tester"],
			"testing": ["tester", "reviewer", "security"],
			"deployment": ["deployer", "monitor", "security"],
			"monitoring": ["monitor", "analyst"],
			"maintenance": ["coder", "deployer", "monitor"]
		}
	},
	"coordinationPatterns": {
		"parallel": {
