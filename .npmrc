# Ensure devDependencies are always installed (don't omit dev dependencies)
# omit=dev would skip devDependencies - we want them installed

# Registry configuration
registry=https://registry.npmjs.org/

# Package-lock configuration
package-lock=true

# Progress and logging
progress=true
loglevel=warn

# Security and audit
audit=true

# Performance optimizations
prefer-online=true
