{
  "$schema": "https://claude-flow.dev/schemas/work-config.v2.json",
  "version": "2.0.0",
  "description": "Claude Flow unified work configuration",
  
  "globalDefaults": {
    "maxAgents": 6,
    "topology": "hierarchical", 
    "executionMode": "parallel",
    "outputFormat": "interactive",
    "ui": "terminal",
    "autoSpawn": true,
    "agentSelection": "auto"
  },
  
  "defaultPreset": "auto",
  
  "presets": {
    "auto": {
      "description": "Automatically detect best workflow based on task analysis",
      "agents": [],
      "autoSpawn": true,
      "agentSelection": "auto",
      "sparc": {
        "enabled": true,
        "autoMode": true
      },
      "swarm": {
        "strategy": "adaptive",
        "coordination": "auto"
      }
    },
    
    "api": {
      "description": "REST API development workflow with comprehensive testing",
      "maxAgents": 8,
      "topology": "hierarchical",
      "executionMode": "parallel",
      "agents": [
        {
          "type": "architect",
          "priority": "high",
          "description": "System design and API architecture"
        },
        {
          "type": "coder", 
          "priority": "high",
          "count": 2,
          "description": "Backend implementation and endpoints"
        },
        {
          "type": "tester",
          "priority": "medium",
          "description": "Unit and integration testing"
        },
        {
          "type": "reviewer",
          "priority": "medium", 
          "description": "Code review and quality assurance"
        },
        {
          "type": "security",
          "priority": "low",
          "description": "Security analysis and vulnerability assessment"
        }
      ],
      "sparc": {
        "enabled": true,
        "modes": ["code", "tdd", "integration", "security-review"],
        "autoMode": true,
        "defaultMode": "code"
      },
      "swarm": {
        "strategy": "development",
        "coordination": "hierarchical",
        "memory": {
          "enabled": true,
          "persistence": "session",
          "crossSessionLearning": true
        }
      },
      "tools": [
        "database",
        "testing-framework", 
        "api-documentation",
        "security-scanner",
        "performance-profiler"
      ],
      "hooks": {
        "preTask": [
          {
            "name": "environment-validation",
            "command": "npx claude-flow hooks pre-task --validate-environment"
          },
          {
            "name": "dependency-check", 
            "command": "npx claude-flow hooks dependency-check --install-missing"
          }
        ],
        "postEdit": [
          {
            "name": "code-formatting",
            "command": "npx claude-flow hooks post-edit --format --file ${file}"
          },
          {
            "name": "automated-testing",
            "command": "npx claude-flow hooks post-edit --test --scope affected"
          }
        ],
        "postTask": [
          {
            "name": "documentation-generation",
            "command": "npx claude-flow hooks post-task --generate-docs"
          },
          {
            "name": "deployment-readiness",
            "command": "npx claude-flow hooks post-task --check-deployment"
          }
        ]
      },
      "github": {
        "enabled": true,
        "workflows": ["ci-cd", "security-scan"],
        "autoCreatePR": false
      },
      "outputFormat": "interactive"
    },
    
    "research": {
      "description": "Research and analysis workflow with comprehensive documentation",
      "maxAgents": 4,
      "topology": "mesh",
      "executionMode": "parallel", 
      "agents": [
        {
          "type": "researcher",
          "priority": "high",
          "count": 2,
          "description": "Primary research and data gathering"
        },
        {
          "type": "analyst", 
          "priority": "high",
          "description": "Data analysis and insight generation"
        },
        {
          "type": "reviewer",
          "priority": "medium",
          "description": "Research validation and fact-checking"
        }
      ],
      "tools": [
        "web-search",
        "data-analysis",
        "documentation-generator",
        "citation-manager",
        "visualization-tools"
      ],
      "sparc": {
        "enabled": true,
        "modes": ["research", "analysis", "documentation"],
        "autoMode": true
      },
      "swarm": {
        "strategy": "research",
        "coordination": "distributed",
        "memory": {
          "enabled": true,
          "persistence": "permanent"
        }
      },
      "outputFormat": "report",
      "outputOptions": {
        "generatePDF": true,
        "includeCitations": true,
        "createSummary": true
      }
    },
    
    "web": {
      "description": "Frontend web development workflow",
      "maxAgents": 6,
      "topology": "hierarchical",
      "agents": [
        {
          "type": "architect",
          "priority": "high",
          "description": "Frontend architecture and component design"
        },
        {
          "type": "coder",
          "priority": "high", 
          "count": 2,
          "description": "Component implementation and logic"
        },
        {
          "type": "designer",
          "priority": "medium",
          "description": "UI/UX design and styling"
        },
        {
          "type": "tester",
          "priority": "medium",
          "description": "Frontend testing and validation"
        }
      ],
      "tools": [
        "react-dev-tools",
        "testing-library",
        "storybook",
        "bundler-analyzer",
        "accessibility-checker"
      ],
      "sparc": {
        "enabled": true,
        "modes": ["code", "ui-design", "testing"],
        "autoMode": true
      }
    },
    
    "deployment": {
      "description": "Deployment and operations workflow",
      "maxAgents": 6,
      "topology": "star",
      "agents": [
        {
          "type": "devops",
          "priority": "high",
          "description": "Infrastructure and deployment coordination"
        },
        {
          "type": "security",
          "priority": "high", 
          "description": "Security validation and compliance"
        },
        {
          "type": "monitor",
          "priority": "medium",
          "description": "Performance monitoring and alerting"
        },
        {
          "type": "tester",
          "priority": "medium",
          "description": "Production readiness testing"
        }
      ],
      "tools": [
        "docker",
        "kubernetes",
        "terraform", 
        "monitoring-stack",
        "security-scanner"
      ],
      "github": {
        "enabled": true,
        "workflows": ["ci-cd", "security-scan", "deployment"],
        "autoCreatePR": true,
        "environments": ["staging", "production"]
      },
      "hooks": {
        "preTask": [
          {
            "name": "infrastructure-validation",
            "command": "npx claude-flow hooks validate-infrastructure"
          }
        ],
        "postTask": [
          {
            "name": "deployment-verification",
            "command": "npx claude-flow hooks verify-deployment"
          },
          {
            "name": "monitoring-setup",
            "command": "npx claude-flow hooks setup-monitoring"
          }
        ]
      }
    },
    
    "testing": {
      "description": "Comprehensive testing and quality assurance workflow",
      "maxAgents": 5,
      "topology": "hierarchical",
      "agents": [
        {
          "type": "tester",
          "priority": "high",
          "count": 2,
          "description": "Test development and execution"
        },
        {
          "type": "analyst",
          "priority": "high",
          "description": "Test coverage and quality analysis"
        },
        {
          "type": "security",
          "priority": "medium",
          "description": "Security testing and penetration testing"
        },
        {
          "type": "performance",
          "priority": "medium", 
          "description": "Performance and load testing"
        }
      ],
      "tools": [
        "testing-framework",
        "coverage-tools",
        "security-scanner",
        "performance-profiler",
        "load-testing-tools"
      ],
      "sparc": {
        "enabled": true,
        "modes": ["tdd", "testing", "security-review"],
        "autoMode": true
      }
    },
    
    "security": {
      "description": "Security audit and compliance workflow",
      "maxAgents": 4,
      "topology": "mesh",
      "agents": [
        {
          "type": "security",
          "priority": "high",
          "count": 2,
          "description": "Security analysis and vulnerability assessment"
        },
        {
          "type": "compliance",
          "priority": "high",
          "description": "Compliance validation and documentation"
        },
        {
          "type": "reviewer",
          "priority": "medium",
          "description": "Security review and validation"
        }
      ],
      "tools": [
        "security-scanner",
        "compliance-checker",
        "vulnerability-database",
        "penetration-testing-tools"
      ],
      "sparc": {
        "enabled": true,
        "modes": ["security-review", "compliance", "audit"],
        "autoMode": true
      },
      "outputFormat": "report",
      "outputOptions": {
        "includeRecommendations": true,
        "generateComplianceReport": true
      }
    },
    
    "performance": {
      "description": "Performance optimization and monitoring workflow",
      "maxAgents": 4,
      "topology": "hierarchical",
      "agents": [
        {
          "type": "performance",
          "priority": "high",
          "description": "Performance analysis and optimization"
        },
        {
          "type": "analyst",
          "priority": "high",
          "description": "Bottleneck analysis and recommendations"
        },
        {
          "type": "monitor",
          "priority": "medium",
          "description": "Performance monitoring setup"
        },
        {
          "type": "coder",
          "priority": "medium",
          "description": "Performance optimization implementation"
        }
      ],
      "tools": [
        "performance-profiler",
        "benchmarking-tools",
        "monitoring-stack",
        "optimization-analyzer"
      ],
      "sparc": {
        "enabled": true,
        "modes": ["optimization", "monitoring", "analysis"],
        "autoMode": true
      }
    }
  },
  
  "agentTypes": {
    "architect": {
      "description": "System architecture and design",
      "capabilities": ["system-design", "architecture-patterns", "scalability"],
      "tools": ["diagramming", "architecture-validation"]
    },
    "coder": {
      "description": "Code development and implementation", 
      "capabilities": ["programming", "debugging", "refactoring"],
      "tools": ["ide", "version-control", "code-analysis"]
    },
    "tester": {
      "description": "Testing and quality assurance",
      "capabilities": ["test-automation", "quality-validation", "bug-detection"],
      "tools": ["testing-framework", "coverage-analysis", "bug-tracking"]
    },
    "researcher": {
      "description": "Research and information gathering",
      "capabilities": ["web-research", "data-collection", "analysis"],
      "tools": ["web-search", "data-sources", "research-tools"]
    },
    "analyst": {
      "description": "Data analysis and insights",
      "capabilities": ["data-analysis", "pattern-recognition", "reporting"],
      "tools": ["analytics-tools", "visualization", "statistical-analysis"]
    },
    "security": {
      "description": "Security analysis and vulnerability assessment",
      "capabilities": ["security-audit", "vulnerability-scan", "compliance"],
      "tools": ["security-scanner", "penetration-testing", "compliance-tools"]
    },
    "devops": {
      "description": "Infrastructure and deployment operations",
      "capabilities": ["infrastructure", "deployment", "automation"],
      "tools": ["docker", "kubernetes", "ci-cd", "monitoring"]
    },
    "reviewer": {
      "description": "Code review and quality validation",
      "capabilities": ["code-review", "quality-assurance", "best-practices"],
      "tools": ["code-analysis", "review-tools", "quality-metrics"]
    },
    "coordinator": {
      "description": "Project coordination and management",
      "capabilities": ["project-management", "coordination", "communication"],
      "tools": ["project-tracking", "communication", "reporting"]
    }
  },
  
  "learningAndAdaptation": {
    "enabled": true,
    "trackUsagePatterns": true,
    "adaptPresets": true,
    "suggestOptimizations": true,
    "personalizedRecommendations": true
  },
  
  "integration": {
    "claudeCode": {
      "enabled": true,
      "hooksIntegration": true,
      "mcpTools": true
    },
    "github": {
      "enabled": true,
      "defaultWorkflows": ["ci-cd"],
      "autoCreateIssues": false
    },
    "docker": {
      "enabled": true,
      "autoContainerization": false
    },
    "monitoring": {
      "enabled": true,
      "realTimeTracking": true,
      "performanceMetrics": true
    }
  }
}